<div class="container">
  <div class="row">
    <div class="col s12">
      <h2 class="center-align">Burger Devourer</h2>
    </div>
  </div>
  <div class="row">
    <!-- List of burgers to devour -->
    <div class="col s4 center-align">
      <h5>Ready to Consume</h5>
      <br>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li>
              <h6>{{burger_name}}  <button class="devour-burger btn waves-effect waves-light" data-id="{{id}}">Devour</button></h6>
              <br>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <!-- Form to submit a new burger -->
    <form class="col s4 center-align">
      <div class="row">
        <div class="input-field col s12">
          <input id="user-burger" type="text" class="validate">
          <label for="user-burger">Enter a burger name here</label>
        </div>
      </div>
      <div class="row"><button id="new-burger" class="btn waves-effect waves-light" type="submit" name="action">Submit</button></div>
      <div class="row"><p>What kind of burger would you like to consume?</p></div>
      <div class="row">
        <img src="/assets/img/claes_burgers.jpg" alt="Burgers" class="responsive-img z-depth-1">
      </div>
    </form>
    <!-- List of devoured burgers -->
    <div class="col s4 center-align">
      <h5>Consumed</h5>
      <br>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>
              <h6 class="grey-text">{{burger_name}}</h6>
              <br>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>